<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/inputnametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Name:"/>
    <EditText
        android:id="@+id/inputnameedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputnametxt"/>
    <TextView
        android:id="@+id/playernumtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Players"
        android:layout_below="@+id/inputnameedit"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/playernumtxt">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/playernumber"
            />
    </LinearLayout>


</RelativeLayout>