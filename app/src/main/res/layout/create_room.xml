<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Create_room"
    android:weightSum="1">

    <TextView
        android:id="@+id/inputNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="10dp"
        android:text="Input Your Name:"/>

    <EditText
        android:id="@+id/inputNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/playerNumTxt"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="Number of Players"
        android:layout_below="@+id/inputNameEdit"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="10dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="57dp"
        android:layout_height="47dp"
        android:entries="@array/playerNumber"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:id="@+id/createNewRoomBnt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83dp"/>


</LinearLayout>